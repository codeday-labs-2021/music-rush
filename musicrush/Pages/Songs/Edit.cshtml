@page "{id:int?}"
@model musicrush.Pages.Songs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Update Rating</h4>
<h4>for</h4>
<h1>@Html.DisplayFor(model => model.Song.Title)</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Song.ID" />
            @* !!! remove the style="display:none;" tag for rows that we want to be editable !!! *@
            <div class="form-group"  style="display:none;">
                <label asp-for="Song.Title" class="control-label"></label>
                <input asp-for="Song.Title" class="form-control" />
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="Song.ReleaseDate" class="control-label"></label>
                <input asp-for="Song.ReleaseDate" class="form-control" />
                <span asp-validation-for="Song.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="Song.Genre" class="control-label"></label>
                <input asp-for="Song.Genre" class="form-control" />
                <span asp-validation-for="Song.Genre" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="Song.Artist" class="control-label"></label>
                <input asp-for="Song.Artist" class="form-control" />
                <span asp-validation-for="Song.Artist" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="Song.AlbumId" class="control-label"></label>
                <input asp-for="Song.AlbumId" class="form-control" />
                <span asp-validation-for="Song.AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Rating" class="control-label"></label>
                <input asp-for="Song.Rating" class="form-control" type="number" min="0" max="5" />
                <span asp-validation-for="Song.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

