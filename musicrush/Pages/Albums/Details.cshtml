@page "{id:int?}"
@model musicrush.Pages.Albums.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Album Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.Artist)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Rating)
        </dt>
        <dd class="col-sm-10">
            @{
                var albumStarRating = new String( '✭', this.Model.Album.Rating ?? 0);
            }
            @albumStarRating
            (@Html.DisplayFor(model => model.Album.Rating))        
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Songs)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Song Title</th>
                    <th>Song Rating</th>
                </tr>
                @foreach (var item in this.Model.Album.Songs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @{
                               var songstarRating = new String( '✭', item.Rating ?? 0);
                            }
                            @songstarRating
                            (@Html.DisplayFor(modelItem => item.Rating))
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Album.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
