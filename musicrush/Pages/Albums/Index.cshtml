@page
@model musicrush.Pages.Albums.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 >Albums</h1>

<div class="b-space">
<p>
    <a asp-page="Create">Add New Album</a>
</p>
</div>

<div class="b-space">
<p>
    Search By:
</p>

<form>
    <p>
        Genre: 
        <select asp-for="AlbumGenre" asp-items="Model.Genres" class="text-dark">      
        <option value="">All</option>
        </select>
    </p>
    <p>
        Artist:
        <select asp-for="AlbumArtist" asp-items="Model.Artists" class="text-dark">
        <option value="">All</option>
        </select>
    </p>
    <p>
        Title: <input type="text" asp-for="SearchString" placeholder="search..." class="text-dark"/>
        <input type="submit" value="Search" class="text-dark"/>
    </p>
</form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Album)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist)
                </td>
                <td>
                    @{
                        var albumStarRating = new String( 'âœ­', item.Rating ?? 0);
                    }
                    @albumStarRating
                    (@Html.DisplayFor(modelItem => item.Rating))
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
